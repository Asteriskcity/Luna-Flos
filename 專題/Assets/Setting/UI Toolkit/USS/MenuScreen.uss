    -unity-font-definition: url('project://database/Assets/%E5%85%B6%E4%BB%96%E8%B3%87%E6%BA%90/SoukouMincho%20SDF.asset?fileID=11400000&guid=cc90fe0c63c9aeb4a935c75e09fd8a10&type=2#SoukouMincho SDF');
