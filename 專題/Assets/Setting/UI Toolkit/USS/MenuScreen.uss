.menu-button {
    position: absolute;
    height: 113px;
    width: 307px;
    top: 639px;
    left: 1474px;
    -unity-font: url('project://database/Assets/%E5%85%B6%E4%BB%96%E8%B3%87%E6%BA%90/SoukouMincho.ttf?fileID=12800000&guid=a1d0e54c8df4703498b38d5acef420b3&type=3#SoukouMincho');
